{
  "name": "mongosnbackend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cross-env NODE_ENV=test jest --selectProjects unit --coverage",
    "test:integration": "cross-env NODE_ENV=test jest --selectProjects integration --coverage ",
    "test:e2e": "jest --selectProjects e2e",
    "dev:docker": "docker compose -f docker-compose.yml up --build",
    "dev:docker:down": "docker compose -f docker-compose.yml down -v",
    "test:docker": "docker compose -f docker-compose.test.yml up --build --abort-on-container-exit --exit-code-from tests",
    "test:docker:down": "docker compose -f docker-compose.test.yml down -v",
    "prod:docker:up": "docker compose -f docker-compose.prod.yml up -d --build",
    "prod:docker:down": "docker compose -f docker-compose.prod.yml down -v"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.0",
    "nanoid": "^5.1.5",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@testcontainers/mongodb": "^11.5.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.0.0",
    "jest": "^30.1.3",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
